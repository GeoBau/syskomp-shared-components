{
  "name": "@syskomp/shared-components",
  "version": "1.0.0",
  "description": "Shared React components for Syskomp configurators",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./EmailModal": {
      "import": "./src/EmailModal.tsx",
      "types": "./src/EmailModal.tsx"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc --project tsconfig.json && vite build --config vite.config.lib.ts",
    "build": "vite build",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GeoBau/syskomp-shared-components.git"
  },
  "keywords": [
    "react",
    "components",
    "email",
    "modal"
  ],
  "author": "Syskomp",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.5"
  }
